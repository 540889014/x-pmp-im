<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
    <package name="patientClientApp" namespace="/patientClientApp" extends="struts-default,json-default">
		
		<!-- 药品分类Action -->
		<action name="medicineLevelAction_*" class="com.osdoctor.action.medicineshop.MedicineLevelAction" method="{1}">
			<result name="levelInfoList" type="json">
				<param name="root">levels</param>
				<param name="callbackParameter">data</param>
			</result>
			<result name="alllevel_1_InfoList" type="json">
				<param name="root">level_1</param>
				<param name="callbackParameter">data</param>
			</result>
			<result name="alllevel_2_InfoList" type="json">
				<param name="root">level_2</param>
				<param name="callbackParameter">data</param>
			</result>
		</action>
		<!-- 商城广告Action -->
		<action name="medicineNoticelAction_*" class="com.osdoctor.action.medicineshop.MedicineNoticeAction" method="{1}">
			<result name="noticeInfoList" type="json">
				<param name="root">notices</param>
				<param name="callbackParameter">data</param>
			</result>
		</action>
		<!-- 每日推荐Action -->
		<action name="medicineDayRecommendAction_*" class="com.osdoctor.action.medicineshop.MedicineDayRecommendAction" method="{1}">
			<result name="dayRecommendInfoList" type="json">
				<param name="root">recommends</param>
				<param name="callbackParameter">data</param>
			</result>
		</action>
			<!-- 药品信息Action -->
		<action name="medicineInfoAction_*" class="com.osdoctor.action.medicineshop.MedicineInfoAction" method="{1}">
			<result name="ById_Medicine_InfoList" type="json">
				<param name="root">MedicineInfos</param>
				<param name="callbackParameter">data</param>
			</result>
			<result name="ByMedicineId_Medicine_InfoList" type="json">
				<param name="root">medicineInfos2</param>
				<param name="callbackParameter">data</param>
			</result>
		</action>
		<!-- 患者用户信息 -->
		<action name="osPatientAction_*" class="com.osdoctor.action.osOperaor.OsPatientAction" method="{1}">
			<result name="login" type="json">
				<param name="root">patients</param>
				<param name="callbackParameter">data</param>
			</result>
			<result name="findByHot" type="json">
				<param name="root">osPatients</param>
				<param name="callbackParameter">data</param>
			</result>
		</action>
		<!-- 标签信息 -->
		<action name="topicLabelAction_*" class="com.osdoctor.action.topiccommon.TopicLabelAction" method="{1}">
			<result name="hotlabel" type="json">
				<param name="root">hotLabels</param>
				<param name="callbackParameter">data</param>
			</result>
			<result name="findHotByUser" type="json">
				<param name="root">hotLabels</param>
				<param name="callbackParameter">data</param>
			</result>
		</action>
		<!-- 患者与患者帖子信息 -->
		<action name="patientTopicAction_*" class="com.osdoctor.action.topicpatient.PatientTopicAction" method="{1}">
			<result name="findByTime" type="json">
				<param name="root">patientTopics</param>
				<param name="callbackParameter">data</param>
			</result>
			<result name="findByHot" type="json">
				<param name="root">patientTopics</param>
				<param name="callbackParameter">data</param>
			</result>
		</action>
		<!-- 后台资讯信息 -->
		<action name="controlTopicAction_*" class="com.osdoctor.action.topiccontrol.ControlTopicAction" method="{1}">
			<result name="findNewTopic" type="json">
				<param name="root">controlTopics</param>
				<param name="callbackParameter">data</param>
			</result>
			<result name="findHotTopic" type="json">
				<param name="root">controlTopics</param>
				<param name="callbackParameter">data</param>
			</result>
		</action>
		<!-- 后台资讯版块信息 -->
		<action name="controlSectionAction_*" class="com.osdoctor.action.topiccontrol.ControlSectionAction" method="{1}">
			<result name="findAllSection" type="json">
				<param name="root">sections</param>
				<param name="callbackParameter">data</param>
			</result>
		</action>
    </package>	
</struts>
