<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.osdoctor.orm.topiccontrol.ControlTopic" table="control_topic">
        <id name="id" type="integer">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="title" type="string">
        	<column name="title"></column>
        </property>
        <property name="content" type="text">
        	<column name="content"></column>
        </property>
        <property name="praiseCount" type="integer">
        	<column name="praiseCount"></column>
        </property>
        <property name="praiseId" type="string">
        	<column name="praiseId"></column>
        </property>
        <property name="views" type="boolean">
        	<column name="views"></column>
        </property>
        <property name="fabiaoTime" type="timestamp">
        	<column name="fabiaoTime"></column>
        </property>
        <property name="doctorOrPatientReplyCount" type="integer">
        	<column name="doctorOrPatientReplyCount"></column>
        </property>
        <property name="lastUpdateTime" type="timestamp">
        	<column name="lastUpdateTime"></column>
        </property>
        <property name="controlTopicType" type="integer">
        	<column name="controlTopicType"></column>
        </property>
        <many-to-one name="doctorOrPatientReply" class="com.osdoctor.orm.topiccontrol.DoctorOrPatientReply">
        	<column name="doctorOrPatientReplyId"></column>
        </many-to-one>
        <many-to-one name="author" class="com.osdoctor.orm.osOperaor.OsControl">
        	<column name="osControlId"></column>
        </many-to-one>
        <many-to-one name="controlSection" class="com.osdoctor.orm.topiccontrol.ControlSection">
        	<column name="controlSectionId"></column>
        </many-to-one>
      <set name="topicLabels" table="topiclabel_controltopic">
      	<key column="controlTopicId"></key>
      	<many-to-many class="com.osdoctor.orm.topicCommon.TopicLabel" column="topiclabelId"/>
      </set>
      <set name="doctorOrPatientReplies">
      	<key column="controltopicId"></key>
      	<one-to-many class="com.osdoctor.orm.topiccontrol.DoctorOrPatientReply"/>
      </set>
    </class>
</hibernate-mapping>
