<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.osdoctor.orm.topiccontrol.ControlSection" table="control_topicSection">
        <id name="id" type="integer">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="name" type="string">
        	<column name="name"></column>
        </property>
        <property name="miaoshu" type="string">
        	<column name="miaoshu"></column>
        </property>
        <property name="topicCount" type="integer">
        	<column name="topicCount"></column>
        </property>
        <property name="huoyueCount" type="integer">
        	<column name="huoyueCount"></column>
        </property>
        <property name="jiansheDate" type="timestamp">
        	<column name="jiansheDate"></column>
        </property>
        <property name="sectionIndex" type="integer">
        	<column name="sectionIndex"></column>
        </property>
        <many-to-one name="osControl" class="com.osdoctor.orm.osOperaor.OsControl">
        	<column name="osControlId"></column>
        </many-to-one>
      <set name="topices">
      	<key column="controlSectionId"></key>
      	<one-to-many class="com.osdoctor.orm.topiccontrol.ControlTopic"/>
      </set>
    </class>
</hibernate-mapping>
