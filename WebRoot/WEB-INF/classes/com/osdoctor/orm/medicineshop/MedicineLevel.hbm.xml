<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.osdoctor.orm.medicineshop.MedicineLevel" table="shop_medicineLevel">
        <id name="id" type="integer">
            <column name="id" />
            <generator class="native" />
        </id>
      <property name="name" type="string">
      	<column name="name"/>
      </property>
      <property name="remark" type="string">
      	<column name="remark"/>
      </property>
  	<property name="levelImg" type="string">
  		<column name="levelImg"/>
  	</property>
      <property name="postion" type="int">
      	<column name="postion"/>
      </property>
        <many-to-one name="parentLevel" class="com.osdoctor.orm.medicineshop.MedicineLevel">
        	<column name="parentId"/>
        </many-to-one>
        <set name="medicineLeveles" order-by="id" lazy="true">
        	<key column="parentId"></key>
        	<one-to-many class="com.osdoctor.orm.medicineshop.MedicineLevel"/>
        </set>
        <set name="medicines" order-by="id" lazy="true">
        	<key column="medicineLevelId"></key>
        	<one-to-many class="com.osdoctor.orm.medicineshop.MedicineInfo"/>
        </set>
    </class>
</hibernate-mapping>
